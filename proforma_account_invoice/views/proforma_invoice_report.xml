<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="account_invoice_report_proforma" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@class='row'][1]" position="after">
                <t t-if="o.is_proforma == True and o.type == 'proforma' ">
                    <h3>
                        <span>Proforma Invoice :</span>
                        <span t-field="o.proforma_number"/>
                    </h3>
                </t>
            </xpath>
            <xpath expr="//div[@t-if='o.partner_id.ref']" position="after">
                <div name="reference" class="col-xs-2" t-if="o.sale_order_id.x_customer_po">
                    <strong>Customer PO:</strong>
                    <p t-field="o.sale_order_id.x_customer_po"/>
                </div>
                <div class="col-xs-2" t-if="o.sale_order_id.project_name">
                    <strong>Project Name:</strong>
                    <p t-field="o.sale_order_id.project_name"/>
                </div>
            </xpath>
        </template>
    </data>
</odoo>