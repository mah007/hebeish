<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="image_res_company_form" model="ir.ui.view">
            <field name="name">image.res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Report Image">
                        <field name="report_image" widget="image" class="oe_avatar"/>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
